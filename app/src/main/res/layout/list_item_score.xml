<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <View
        android:id="@+id/line_break"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/textInputColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/model_number"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/yekanweb_regular"
        android:gravity="center"
        android:text="PA32BA1633"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_break"
        tools:ignore="MissingConstraints,RtlHardcoded" />

    <TextView
        android:id="@+id/serial_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/yekanweb_regular"
        android:gravity="center"
        android:text="0139006908248281"
        android:textColor="@color/textInputColor"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/serial_number"
        app:layout_constraintTop_toTopOf="@+id/serial_number" />

    <TextView
        android:id="@+id/serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/yekanweb_regular"
        android:gravity="center"
        android:text="شماره سریال :"
        android:textColor="@color/textInputColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/model_number"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/yekanweb_regular"
        android:gravity="center"
        android:text="امتیاز :"
        android:textColor="@color/textInputColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/serial_number"
        app:layout_constraintTop_toBottomOf="@+id/serial_number" />

    <TextView
        android:id="@+id/score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/yekanweb_regular"
        android:gravity="center"
        android:text="30"
        android:textColor="@color/textInputColor"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/score"
        app:layout_constraintTop_toTopOf="@+id/score" />

    <ImageView
        android:id="@+id/coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/score_value"
        app:layout_constraintTop_toTopOf="@+id/score_value"
        app:srcCompat="@drawable/coin" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/yekanweb_regular"
        android:gravity="center"
        android:text="تاریخ :"
        android:textColor="@color/textInputColor"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/coin"
        app:layout_constraintTop_toTopOf="@+id/score" />

    <TextView
        android:id="@+id/date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/yekanweb_regular"
        android:gravity="center"
        android:text="1390/3/12 13:24"
        android:textColor="@color/textInputColor"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/date"
        app:layout_constraintTop_toTopOf="@+id/date" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:checked="false"
        android:clickable="false"
        android:gravity="center"
        android:scaleX="1.8"
        android:scaleY="1.8"
        android:theme="@style/checkBoxStyle"
        app:buttonTint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/text_checkBox"
        app:layout_constraintStart_toStartOf="@+id/line_break"
        app:layout_constraintTop_toBottomOf="@+id/line_break"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/text_checkBox"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yekanweb_regular"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="0.5"
        android:text="دستگاه توسط خریدار
ثبت شده است"
        android:textColor="@color/textInputColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/checkBox"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

</androidx.constraintlayout.widget.ConstraintLayout>
